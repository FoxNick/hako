{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "includes": [
      "src/**/*.js",
      "src/**/*.ts",
      "tests/**/*.js",
      "tests/**/*.ts"
    ],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "includes": [
      "src/**/*.js",
      "src/**/*.ts",
      "tests/**/*.js",
      "tests/**/*.ts"
    ],
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "files": {
    "includes": ["src/**/*", "tests/**/*"]
  }
}
